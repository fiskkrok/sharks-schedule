{
    "navigationFallback": {
        "rewrite": "/index.html",
        "exclude": [
            "/assets/*.{png,jpg,gif,svg,css,js}",
            "/*.{ico,json}"
        ]
    },
    "routes": [
        {
            "route": "/api/v1/club-schedule-season/*",
            "methods": [
                "GET",
                "OPTIONS"
            ],
            "rewrite": "https://api-web.nhle.com/v1/club-schedule-season/{rest}",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type, Authorization",
                "Access-Control-Max-Age": "86400"
            }
        },
        {
            "route": "/api/*",
            "methods": [
                "GET",
                "OPTIONS"
            ],
            "rewrite": "https://api-web.nhle.com/{rest}",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET, OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type, Authorization",
                "Access-Control-Max-Age": "86400"
            }
        }
    ],
    "responseOverrides": {
        "404": {
            "rewrite": "/index.html",
            "statusCode": 200
        }
    },
    "globalHeaders": {
        "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://api-web.nhle.com https://cdn.nhle.com; img-src 'self' data: https://cdn.nhle.com; font-src 'self' data:; connect-src 'self' https://api-web.nhle.com;",
        "cache-control": "no-cache",
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
    },
    "mimeTypes": {
        ".json": "application/json"
    }
}